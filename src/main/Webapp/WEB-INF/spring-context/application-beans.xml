<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<!--
	 	注入依赖关系bean
	  -->
	<!-- 
	sqlSessionFactory	外事系统表库
	sqlSessionFactory2	内部系统组织架构权限库
	-->
	
	<bean id="DBhelper" class="com.test.dao.DBhelper">
		<property name="usermapper">
			<ref local="IUserMapper" />
		</property>
	</bean>
	<bean id="IUserMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="com.test.Ifact.IUserMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
</beans>